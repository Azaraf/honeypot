<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/btn_restore"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/btn_backup"
        android:layout_alignBottom="@+id/btn_backup"
        android:layout_alignParentRight="true"
        android:text="복원"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_backup"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:text="백업"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_config"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btn_restore"
        android:layout_centerHorizontal="true"
        android:text="환경설정"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btn_config"
        android:layout_below="@+id/btn_config"
        android:layout_marginTop="31dp"
        android:text="도움말"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_donation"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_help"
        android:layout_alignBottom="@+id/btn_help"
        android:layout_alignRight="@+id/btn_config"
        android:text="기부하기"
        android:textSize="25sp" />

</RelativeLayout>