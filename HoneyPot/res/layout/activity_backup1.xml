<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/backup_list"
            android:layout_width="wrap_content"
            android:layout_height="432dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

        </ListView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_prev_backup1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="14dp"
        android:text="이   전"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bnt_next_backup1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_prev_backup1"
        android:layout_alignBottom="@+id/btn_prev_backup1"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/btn_prev_backup1"
        android:text="다   음"
        android:textSize="20sp" />

</RelativeLayout>